{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*.json"
      },
      {
        "include": "src/mail/templates/**/*",
        "outDir": "dist/mail/templates"
      },
      {
        "include": "static/**/*"
      }
    ],
    "watchAssets": true
  }
}
